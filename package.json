{
  "name": "polostorebackend",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "dev-local": "nodemon server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "client-install": "cd client && npm install",
    "build": "echo 'Backend build completed'",
    "dev-full": "concurrently \"npm run server\" \"npm run client\"",
    "prod": "cross-env NODE_ENV=production node server.js",
    "postbuild": "echo 'Build completed successfully'",
    "migrate": "node scripts/runMigration.js",
    "seed": "node scripts/createAdmin.js",
    "test": "echo \"No tests specified\" && exit 0",
    "health-check": "curl -f http://localhost:5050/health || exit 1"
  },
  "keywords": [
    "api",
    "backend",
    "music",
    "production",
    "railway"
  ],
  "author": "PoloStore",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "i18next": "^25.3.2",
    "i18next-fs-backend": "^2.6.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "pg": "^8.16.2",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10"
  }
}
